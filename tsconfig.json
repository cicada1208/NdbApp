{
  "compilerOptions": {
    "allowJs": true,
    "strict": true, // 相當於啟用 noImplicitAny, noImplicitThis, alwaysStrict,strictNullChecks, strictFunctionTypes, strictPropertyInitialization
    "noImplicitAny": false, // false: allow any when implicit
    "strictNullChecks": false,
    // "strictPropertyInitialization": false,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
